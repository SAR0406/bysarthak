{
  "entities": {
    "ContactMessage": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ContactMessage",
      "type": "object",
      "description": "Represents a contact message sent by a visitor, including replies from an admin.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the contact message."
        },
        "name": {
          "type": "string",
          "description": "Name of the person sending the message."
        },
        "email": {
          "type": "string",
          "description": "Email address of the sender.",
          "format": "email"
        },
        "message": {
          "type": "string",
          "description": "The content of the message."
        },
        "sentAt": {
          "type": "string",
          "description": "Timestamp indicating when the message was sent.",
          "format": "date-time"
        },
        "replies": {
          "type": "array",
          "description": "A thread of replies from the admin.",
          "items": {
            "type": "object",
            "properties": {
              "message": {
                "type": "string",
                "description": "The content of the reply."
              },
              "sentAt": {
                "type": "string",
                "description": "Timestamp for the reply.",
                "format": "date-time"
              },
              "sentBy": {
                "type": "string",
                "description": "Identifier for the sender (e.g., 'admin')."
              }
            },
            "required": ["message", "sentAt", "sentBy"]
          }
        }
      },
      "required": [
        "id",
        "name",
        "email",
        "message",
        "sentAt"
      ]
    },
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user profile was created."
        },
        "name": {
          "type": "string",
          "description": "The user's full name."
        },
        "age": {
          "type": "number",
          "description": "The user's age."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        }
      },
      "required": [
        "email",
        "createdAt",
        "name",
        "username",
        "age"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com",
      "github.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/contact_messages/{contactMessageId}",
        "definition": {
          "entityName": "ContactMessage",
          "schema": {
            "$ref": "#/backend/entities/ContactMessage"
          },
          "description": "Stores contact messages and their replies. Only authenticated users (admins) can read and update (reply).",
          "params": [
            {
              "name": "contactMessageId",
              "description": "Unique identifier for the contact message document."
            }
          ]
        }
      },
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "UserProfile",
          "schema": {
            "$ref": "#/backend/entities/UserProfile"
          },
          "description": "Stores public-facing user profile information. The document ID is the same as the Firebase Auth UID.",
          "params": [
            {
              "name": "userId",
              "description": "The user's unique ID from Firebase Authentication."
            }
          ]
        }
      }
    ],
    "reasoning": "This design prioritizes security and scalability. A top-level `/contact_messages` collection is used for messages, avoiding hierarchical authorization complexities. A separate `/users` collection stores user profiles, linking them by UID to Firebase Authentication. This separation allows for distinct security rules for public user data versus private contact messages."
  }
}
    